<% content_for :title, "Applications" %>

<%= link_to new_application_path do %><%= content_tag :button, "Add new application", type: 'button', class: 'btn btn-success' %><% end %>
<% 2.times do %><%= tag.br %><% end %>
<%= content_tag :h3, "Saved applications" %>

<% if @applications.length > 0 %>
    <%= render 'saved_applications' %>
    <%= tag.hr %>
    <%= form_tag filtered_applications_path do %>
        <%= select_tag :status_id, options_from_collection_for_select(@statuses, :id, :name), required: 'required', include_blank: true %>
        &nbsp;
        <%= submit_tag "Filter by status", class: 'btn btn-primary' %>
    <% end %>
    <%= tag.br %>
    <%= form_tag filtered_applications_path do %>
        <%= select_tag :company_id, options_from_collection_for_select(@companies, :id, :name), required: 'required', include_blank: true %>
        &nbsp;
        <%= submit_tag "Filter by company", class: 'btn btn-primary' %>
    <% end %>
<% else %>
    <%= content_tag :p, "You currently have no applications saved!" %>
<% end %>