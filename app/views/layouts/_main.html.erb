<%= content_tag :main, class: "container text-#{(yield :main_align).empty? ? 'left' : (yield :main_align)}" do %>
    <% if flash[:content] %>
        <%= content_tag :div, class: "alert alert-#{flash[:type]}", role: 'alert' do %> <%# format alert according to message type %>
            <%= flash[:content] %> <%# message content %>
        <% end %>
    <% end %>

    <%# if a main heading has been provided, set that as the content fot the h2 below; else default to the page title %>
    <% main_heading = (yield :'main_heading').empty? ? (yield :title) : (yield :'main_heading') %>
    <%= content_tag :h2, main_heading %>
    <%= tag.br %>
    <%= yield %>
    <%= content_tag :p, id: 'video-container' do %>
        <%= content_tag :iframe, "", id: 'video', allow: 'autoplay', allowfullscreen: 'allowfullscreen' %>
    <% end %>
<% end %>