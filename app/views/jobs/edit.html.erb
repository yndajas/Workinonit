<% content_for :title, "Update job" %>

<%= render 'user_generated_job_form', submit_text: "Update job" %>

<%= tag.hr %>

<%= content_tag :h3, "Delete job" %>
<%= content_tag :p do %>
    <%= content_tag :span, "Warning:", class: 'bold' %> deleting a job cannot be undone. Deleting a job will also delete any associated application data.
<% end %>

<%= form_for @job, method: :delete, html: {id: 'delete_record'} do |f| %>
    <%= f.submit "Delete job", class: 'btn btn-danger' %>
<% end %>
