<% if flash[:notice] %>
    <%= content_tag(:div, flash[:notice], class: 'notice') %>
<% end %>

<%= content_tag(:h2, "Search for jobs") %>
<%= form_tag jobs_searches_path do %>
    <%= label_tag :keywords %>
    <%= text_field_tag :'search[keywords]', "", id: 'keywords' %>
    <%= label_tag :location %>
    <%= text_field_tag :'search[location]', "", id: 'location' %>
    <%= label_tag :country %>
    <%= select_tag :'search[country_code]', options_from_collection_for_select(@countries, 'code', 'country_name', 'uk'), id: 'country' %>
    <%= submit_tag "Search" %>
<% end %>

<%= content_tag(:h2, "Add job by URL") %>
<%= content_tag(:p, "Supports Indeed, LinkedIn and Reed") %>
<%= form_tag jobs_path do %>
    <%= label_tag :job_url, "URL" %>
    <%= url_field_tag :job_url %>
    <%= submit_tag "Save job" %>
<% end %>

<%= content_tag(:h2, "Add job manually") %>
<%= form_for @job do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, required: 'required' %>
    <%= f.label :company_name, "Company" %>
    <%= f.text_field :company_name, required: 'required' %>
    <%= f.label :location %>
    <%= f.text_field :location %>
    <%= f.label :salary %>
    <%= f.text_field :salary %>
    <%= f.label :contract, "Contract type" %>
    <%= f.text_field :contract %>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <%= f.label :custom_url, "URL" %>
    <%= f.url_field :custom_url %>
    <%= submit_tag "Save job" %>
<% end %>
