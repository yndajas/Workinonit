<% if flash[:notice] %>
    <%= content_tag(:div, flash[:notice], class: "notice") %>
<% end %>

<%= content_tag(:h2, "Search for jobs") %>
<%= form_tag jobs_searches_path do %>
    <%= label_tag :keywords %>
    <%= text_field_tag :'search[keywords]', "", id: 'keywords' %>
    <%= label_tag :location %>
    <%= text_field_tag :'search[location]', "", id: 'location' %>
    <%= label_tag :country %>
    <%= select_tag :'search[country_code]', options_from_collection_for_select(@countries, 'code', 'country_name', 'uk'), id: 'country' %>
    <%= submit_tag "Search" %>
<% end %>

<%= content_tag(:h2, "Add job by URL") %>
<%= content_tag(:p, "Supports Indeed, LinkedIn and Reed") %>
<%= form_tag jobs_path do %>
    <%= label_tag :job_url, 'URL' %>
    <%= url_field_tag :job_url %>
    <%= submit_tag "Save job" %>
<% end %>