<%= form_tag jobs_searches_path do %>
    <%= label_tag :keywords %><br>
    <%= text_field_tag :'search[keywords]', "", id: 'keywords' %><br><br>
    <%= label_tag :location %><br>
    <%= text_field_tag :'search[location]', "", id: 'location' %><br><br>
    <%= label_tag :country %><br>
    <%= select_tag :'search[country_code]', options_from_collection_for_select(@countries, 'code', 'country_name', 'uk'), id: 'country' %><br><br>
    <%= submit_tag "Search", class: 'btn btn-primary' %>
<% end %>