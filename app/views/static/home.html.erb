<% content_for :'main_heading', "Welcome!" %>

<%= content_tag :h3, "What is Workinonit?" %>

<%= content_tag :p, "A song by J Dilla... and also a web app for managing your job search! With Workinonit, you can:" %>
<%= content_tag :ul do %>
    <%= content_tag :li do %>
        <%= content_tag :span do %>
            find jobs by keywords (e.g. job title) and location<%= content_tag :span, "*", class: 'secondary-text' %>
        <% end %>
    <% end %>
    <%= content_tag :li do %>
        <%= content_tag :span do %>
            add jobs by URL<%= content_tag :span, "*", class: 'secondary-text' %> or manual entry
        <% end %>
    <% end %>
    <%= content_tag :li, "keep track of your progress on job applications" %>
    <%= content_tag :li, "save and review feedback from and notes on companies" %>
<% end %>
<%= content_tag :p do %>
    You can view a
    <%= link_to "short demo on YouTube", "https://www.youtube.com/watch?v=nK35Tuxfkso", target: '_blank' %>. [TO BE ADDED - PLACEHOLDER LINK]
<% end %>

<%= content_tag :h3, "Get started!" %>

<%= content_tag :p do %>
    <%= link_to "Register", register_path %>
    or
    <%= link_to "log in", login_path %>
    to start Workinonit today!
<% end %>

<%= tag.hr %>

<%= content_tag :p do %>
    <%= content_tag :span, "*", class: 'secondary-text' %>
    these features support jobs on Indeed, LinkedIn and Reed
<% end %>