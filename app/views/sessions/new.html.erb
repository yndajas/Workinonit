<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
<% end %>

<%= link_to "Log in via Facebook", "/auth/facebook" %>

<%= form_tag sessions_path do %>
    <%= label_tag 'email' %>
    <%= email_field_tag 'email' %>
    <%= label_tag 'password' %>
    <%= password_field_tag %>
    <%= submit_tag "Log in" %>
<% end %>