<%= content_tag(:h2, "Job results") %>
<%= content_tag(:p, "Select which jobs to save") %>
<%= form_tag jobs_path, id: 'search-results-form' do %>
    <% @jobs.each do |provider, jobs| %>
        <% if jobs.length > 0 %>
            <%= content_tag(:h3, provider) %>
            <% jobs.each do |job| %>
                <%= check_box_tag :"job_ids[#{provider}][]", job[:id], false, id: "job_#{provider}_#{job[:id]}" %>
                <%= label_tag(:"job_#{provider}_#{job[:id]}") do %>
                    <%= job[:title] %>
                    <%= content_tag(:span, "//", class: 'search-result-divider') %>
                    <%= content_tag(:span, job[:company], class: 'search-result-company') %>
                <% end %>
                <br>
            <% end %>
        <% end %>
    <% end %>
    <br>
    <%= hidden_field_tag :country_id, @country_id %>
    <%= submit_tag "Save jobs", disabled: 'disabled' %>
<% end %>